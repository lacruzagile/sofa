{
  "name": "sofa",
  "version": "1.0.0",
  "description": "SOFA",
  "repository": "https://git.clxnetworks.net/ea/smart-spec/",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "spago bundle-app --to sofa.js && sed -i 's/&& module.require /\\&\\& false /' sofa.js && parcel build sofa.html",
    "clean": "rm -rf dist output sofa.js",
    "docker-build": "yarn build && docker build -f docker/Dockerfile -t sofa:latest .",
    "start": "parcel serve sofa-dev.html",
    "test": "spago test",
    "watch": "spago build --watch --clear-screen"
  },
  "staticFiles": {
    "staticPath": "../public/v1alpha1",
    "staticOutPath": "v1alpha1"
  },
  "devDependencies": {
    "parcel": "^2.0.0",
    "parcel-reporter-static-files-copy": "^1.3.0"
  },
  "dependencies": {
    "iso-3166": "^4.0.1",
    "xhr2": "^0.2.1"
  }
}
